{% extends 'base.html.twig' %}

{% block body %}
    <div class="container my-5">
        <h1> Connexion </h1>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post">
        <label for="username">Votre email:</label>
        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required>

        <label for="password">Votre mot de passe:</label>
        <input class="form-control mt-2" type="password" id="password" name="_password" required>

        <input type="hidden" name="_target_path" value="{{ path('app_account') }}"> 

        <button type="submit" class="btn btn-success mt-2">se connecter</button>
    </form>

    </br>
    Si vous avez pas de compte<a href="{{ path('app_register')}}">Veillez vous inscrire</a>

    </div>

{% endblock %}
